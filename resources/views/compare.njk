<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLongTitle">Compare</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
    <table class="table table-striped table-inverse">
    <thead>
    {% for i in ComparedProducts %}
    <th>
      <img src="data:image/jpeg;base64,{{i.Image}}" width="100" height="100">
      <h4 class="heading" >{{i.Name}}</h4>
    </th>
    {% endfor %}
    <tbody>
      <tr>
      {% for i in ComparedProducts %}
      <td>
        <ul class="list-group">
          <h3 class="heading" >Specifications</h3>
          <li class="list-group-item row">
          <div class="row row col-xl-12">
            {% for j in i.specs %}
            <div class="col-sm-10">
                <div class="col-sm-7">
                <h4 class="heading">{{j.Name}}</h4>
              </div>
              <div class="col-sm-3">
                <h5 class="sub-heading" >{{j.Value}}</h5>
              </div>
            </div>
            {% endfor %}
          </div>
          </li>
        </ul>

        <ul class="list-group">
            <h3 class="heading" >Details</h3>
            <li class="list-group-item row">
            <div class="row col-xl-12">
              <div class="col-sm-5 col-xs-3">
                <h4 class="sub-heading" >Desc</h4>
              </div>
              <div class="col-sm-3">
              <h5 class="sub-heading">{{i.Desc}}</h5>
              </div>
            </div>
            <div class="row col-xl-12">
              <div class="col-sm-5 col-xs-3">
                <h4 class="sub-heading" >Price</h4>
              </div>
              <div class="col-sm-3">
              <h5 class="sub-heading">
                {{i.price}}
              </h5>

              </div>
            </div>
            <div class="row col-xl-12">
              <div class="col-sm-5 col-xs-3">
                <h4 class="sub-heading" >Cat</h4>
              </div>
              <div class="col-sm-3">
              <h5 class="sub-heading">
                {{i.cat}}
              </h5>
              </div>
            </div>
            </li>
        </ul>
      </td>
      {% endfor %}
      </tr>
    </tbody>
    </table>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
