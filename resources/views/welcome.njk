{% extends 'master' %}
{% block content %}
	<div class="inner-block container">
		<div class="row container">
			<ul class="nav nav-tabs">
					<li role="presentation"><a href="#login" data-toggle="tab">Login</a></li>
					<li role="presentation"><a href="#register" data-toggle="tab">Register</a></li>
			</ul>
			<div class="tab-content container">
				<div id="login" class="tab-pane fade active">
					{{form.open({action:"UserController.login",class:"form-horizontal"})}}
					{{csrfField}}
					<div class="form-group row">
						{{form.label("Name","Name",{class:'col-md-6 control-label'})}}
						{{form.text("Name","",{class:'input  col-md-6 form-control',required:'required'})}}
					</div>
					<div class="form-group row ">
						{{form.label("Password","Password",{class:'col-md-6 control-label'})}}
						{{form.password("Password","",{class:'input form-control col-md-6',required:'required'})}}
					</div>
					<div class="form-group row ">
						{{form.label("type","Type",{class:'col-md-6 control-label'})}}
						<select name="type" class="form-control col-md-6" required>
							<option>Client</option>
							<option>Owner</option>
						</select>
					</div>
					<div class="form-group row ">
						{{form.submit("Login","Login",{class:'input form-control col-md-6'})}}
					</div>
					{{form.close()}}
				</div>
				<div id="register" class="tab-pane fade">
					{{form.open({action:"UserController.store",class:"form-horizontal"})}}
					{{csrfField}}
					<div class="form-group row">
						{{form.label("Name","Name",{class:'col-md-6 control-label'})}}
						{{form.text("Name","",{class:'input form-control col-md-6'})}}
					</div>
					<div class="form-group row ">
						{{form.label("Password","Password",{class:'col-md-6 control-label'})}}
						{{form.password("Password","",{class:'input form-control col-md-6'})}}
					</div>
					<div class="form-group row ">
						{{form.label("Email","email",{class:'col-md-6 control-label'})}}
						{{form.email("Email","",{class:'input form-control col-md-6'})}}
					</div>
					<div class="form-group row  ">
						{{form.label("type","Type",{class:'col-md-6 control-label'})}}
						<select name="type" class="form-control col-md-6">
							<option>Client</option>
							<option>Owner</option>
						</select>
					</div>
					<div class="form-group row ">
						{{form.submit("Register","Register",{class:'input form-control col-md-6'})}}
					</div>
					{{form.close()}}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
